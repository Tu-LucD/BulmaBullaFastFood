<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


<script>
        function AddOrderToCart() {            
            var senzuQuantity = document.getElementById("senzuQuantity").value;
            var gotchaQuantity = document.getElementById("gotchaQuantity").value;
            var krabbyQuantity = document.getElementById("krabbyQuantity").value;
            var ramenQuantity = document.getElementById("ramenQuantity").value;
            var onigiriQuantity = document.getElementById("onigiriQuantity").value;
            var happyQuantity = document.getElementById("happyQuantity").value;
            var karaageQuantity = document.getElementById("karaageQuantity").value;
            var rainbowQuantity = document.getElementById("rainbowQuantity").value;
            var beefQuantity = document.getElementById("beefQuantity").value;
            var eggQuantity = document.getElementById("eggQuantity").value;

            var ramuneQuantity = document.getElementById("ramuneQuantity").value;
            var pocariQuantity = document.getElementById("pocariQuantity").value;


            let xmlhttp = new XMLHttpRequest();
            xmlhttp.open("GET", "/Checkout.aspx?sz=senzuBean" + senzuQuantity + "&go=gotchaPork" + gotchaQuantity + "&kr=krabbyPatty" + krabbyQuantity +
                "&rn=hiddenLeafRamen" + ramenQuantity + "&on=brockOnigiri" + onigiriQuantity + "&ha=happyMeal" + happyQuantity + "&ka=karaageRoll" + karaageQuantity +
                "&ri=rainbowTerrine" + rainbowQuantity + "&be=beefBouguignon" + beefQuantity + "&eg=erinaEggBenedict" + eggQuantity + "&re=ramune" + ramuneQuantity +
                "&po=pocari" + pocariQuantity, false);
            xmlhttp.send(null)
            @*window.open('@Url.Action("Payment", "Home")');*@
            document.getElementById("viewCartBtn").style.display = "block";

           
        }

        function Check() {

            var obj = document.getElementById('txtLabel');
            obj.innerHTML = "Your sign in information is incorrect";
            obj.style.color = "red";

    }

    function test() {
        alert("John")
    }
</script>
</head>
<body>
    <div style="background-color: yellow;" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Bulma and Bulla Fast Food", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("User Dashboard", "UserDashboard", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Bulma and Bulla Fast Food Corporations &copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
